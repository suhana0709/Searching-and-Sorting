#finding pairs which sum up to form X
# TWO POINTER APPROACH

def pair(a, n, x):
    i = 0     #first number in the array
    j = n-1   #last number  """"""""""""
    while (i<j):
        if (a[i]+a[j]) == x:
            return a[i], a[j]
        elif (a[i]+a[j]) < x:
            i+=1
        else:
            j-=1
    return 0

a = [1, 2, 3, 5, 8, 10]
print(a)
x = 12
print("Target Sum: ",x)
print("The pair which form ",x," are: ",pair(a, len(a), x))
